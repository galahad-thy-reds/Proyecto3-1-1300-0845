@model Proyecto3.Entidades.Clases.Empleado

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>¿Está seguro que desea eliminar este Empleado?</h3>
<div>
    @* <h4>Empleado</h4> *@
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cedula)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cedula)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalarioDiario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalarioDiario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoEmpleado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoEmpleado)
        </dd>
    </dl>

    <form asp-action="Delete">
        @Html.Hidden("cedula", Model.Cedula)
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a lista de empleados</a>
    </form>
</div>
